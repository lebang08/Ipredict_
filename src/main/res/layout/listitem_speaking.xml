<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="56dp"
        android:layout_height="96dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_speaking_icon"
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp" >

        <TextView
            android:id="@+id/txt_speaking_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="用户名"
            android:textColor="#3399ff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_speaking_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_speaking_username"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:minLines="1"
            android:text="我要一个雅量 在    北京第三十一考场  拿到了很多个鸭粮"
            android:textColor="#898989"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_speaking_examtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_speaking_username"
            android:layout_alignBottom="@+id/txt_speaking_username"
            android:layout_alignRight="@+id/txt_speaking_content"
            android:text="2014-12-12"
            android:textColor="#898989"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_speaking_examroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_speaking_content"
            android:layout_marginTop="1dp"
            android:drawablePadding="2dp"
            android:text="北京考场"
            android:textColor="#3399ff"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>