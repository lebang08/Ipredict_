<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#0000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_listitem_ordergoods_imgurl"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_listitem_ordergoods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/img_listitem_ordergoods_imgurl"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="商品大类"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_listitem_ordergoods_specname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_listitem_ordergoods_name"
            android:layout_marginRight="32dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/img_listitem_ordergoods_imgurl"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="商品规格" />

        <TextView
            android:id="@+id/txt_listitem_ordergoods_goodsnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_listitem_ordergoods_specname"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/img_listitem_ordergoods_imgurl"
            android:text="x 1" />

        <TextView
            android:id="@+id/txt_listitem_ordergoods_tocomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="#f7941d"
            android:padding="2dp"
            android:text="去评论"
            android:textColor="#fff" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#0000" />
</LinearLayout>