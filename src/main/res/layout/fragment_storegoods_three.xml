<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fragment_goods_two"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_storegoods_fragment3_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部" />

        <TextView
            android:id="@+id/txt_storegoods_fragment3_good"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="好评" />

        <TextView
            android:id="@+id/txt_storegoods_fragment3_middle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="中评" />

        <TextView
            android:id="@+id/txt_storegoods_fragment3_bad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="差评" />

        <TextView
            android:id="@+id/txt_storegoods_fragment3_showorder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="晒单" />

    </LinearLayout>

    <ListView
        android:id="@+id/listview_store_fragment_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>