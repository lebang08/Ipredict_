<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_activity_store_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:onClick="addAddress"
                android:text="收货地址"
                android:textColor="#bf7473" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这里面有些小复杂" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这里面有些小复杂" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="商品件数:" />

                <TextView
                    android:id="@+id/txt_storecar_total_num"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="16dp"
                    android:text="商品件数"
                    android:textColor="#bf7473" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="合计金额:" />

                <TextView
                    android:id="@+id/txt_storecar_total_price"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="16dp"
                    android:text="商品件数"
                    android:textColor="#bf7473" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="应付金额:" />

                <TextView
                    android:id="@+id/txt_storecar_final_price"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="16dp"
                    android:text="商品件数"
                    android:textColor="#bf7473" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_activity_storepay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#f7941d"
            android:onClick="nowPay"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="提交订单"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/btn_activity_storepay"
            android:gravity="center_vertical"
            android:text="应付总金额:"
            android:textColor="#bf7473"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>