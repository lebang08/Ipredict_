<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#f0f2f5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/txt_listitem_orderlist_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单号"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_listitem_orderlist_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_listitem_orderlist_num"
            android:text="订单时间" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f0f2f5" />

        <ImageView
            android:id="@+id/img_listitem_orderlist_delete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@mipmap/icon_delete_"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="4dp"
        android:background="#ccc" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_listitem_orderlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f0f2f5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/txt_listitem_orderlist_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款金额" />

        <TextView
            android:id="@+id/txt_listitem_orderlist_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/txt_listitem_orderlist_price"
            android:background="#5bc0de"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="订单状态"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/btn_listitem_orderlist_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_listitem_orderlist_statue"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="#d9534f"
            android:paddingBottom="1dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="1dp"
            android:text="￥ 去付款"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>