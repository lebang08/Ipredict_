<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_listitem_orderlist_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单号"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_listitem_orderlist_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_listitem_orderlist_num"
            android:text="订单时间" />

        <ImageButton
            android:id="@+id/img_listitem_orderlist_delete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_delete_" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="4dp"
        android:background="#ccc" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_listitem_orderlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="4dp"
        android:background="#ccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_listitem_orderlist_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款金额" />

        <Button
            android:id="@+id/btn_listitem_orderlist_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/buttonstyle_orange"
            android:text="去付款"
            android:textColor="#fff" />

    </RelativeLayout>

</LinearLayout>