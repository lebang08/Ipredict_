<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#f7a900">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/arrow_white_back"
            android:onClick="back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码2/2"
            android:textColor="#fff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_activity_loginforget_changemethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/buttonstyle"
            android:onClick="requestCode"
            android:text="切换为邮箱找回"
            android:textColor="#fff"
            android:visibility="gone" />

    </RelativeLayout>

    <EditText
        android:id="@+id/edt_activity_loginforget_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@mipmap/icon_phone"
        android:drawablePadding="4dp"
        android:hint="请输入电话号码"
        android:inputType="number"
        android:maxLength="11"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/edt_activity_loginforget_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_chain"
            android:drawablePadding="4dp"
            android:hint="请输入验证码" />

        <Button
            android:id="@+id/btn_activity_loginforget_sendcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="4dp"
            android:background="@drawable/buttonstyle_orange"
            android:text="获取验证码"
            android:textColor="#fff" />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_activity_loginforget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@mipmap/icon_key"
        android:drawablePadding="4dp"
        android:hint="请输入新密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edt_activity_loginforget_passwordagain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@mipmap/icon_key"
        android:drawablePadding="4dp"
        android:hint="请再次输入密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_activity_loginforget_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:background="#f55054"
        android:text="提交"
        android:textColor="#fff" />

</LinearLayout>